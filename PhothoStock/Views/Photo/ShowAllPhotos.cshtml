@model PhotoInfoAndFilters
@{
    Layout = "_Layout";
    int i = 0;
    int next =(int)ViewData["page"] + 1;
    int previous =(int)ViewData["page"] - 1;

}
@foreach(var j in Model.PhotosInfo)
{
<a asp-action="ShowPhotoInfo" asp-route-photoId="@j.Id">
    <img src="~/UsersPhotos/@j.UserName/@j.PhotoName" height="250" width="250" />
</a>
}
